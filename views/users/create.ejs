<!DOCTYPE html>
<html>
<head>
  <title>Create User</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel='stylesheet' href='/stylesheets/datepicker.css'>
</head>
<body>
  <script src="/javascripts/datepicker.js"></script>
  <script>const picker = datepicker('.datepicker');</script>
    <div class="container">
      <a href="/users" class="user-button">User List</a>
      <h1>Create New User</h1>
      <form action="/users/save" method="post">
        <table>
          <tbody>
            <tr>
              <td>Name</td>
              <td><input type="text" name="name" /></td>
            </tr>
            <tr>
              <td>User Name</td>
              <td><input type="text" name="username" /></td>
            </tr>
            <tr>
              <td>Email</td>
              <td><input type="text" name="email" /></td>
            </tr>
            <tr>
              <td>Birthday</td>
              <td><input type="date" name="birthday" /></td>
            </tr>
            <tr>
              <td>Favorite Color</td>
              <td><input type="text" name="favoriteColor" /></td>
            </tr>
            <tr>
              <td colspan="2"><button type="submit">Create</button></td>
            </tr>
          </tbody>
        </table>
      </form>
    </div>
  </body>
</html>
